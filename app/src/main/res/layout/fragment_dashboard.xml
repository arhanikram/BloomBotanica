<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginVertical="32dp"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.DashboardFragment">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_username"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Weather Widget -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:backgroundTint="@color/weather_card_background">

        <!-- Weather Date -->
        <TextView
            android:id="@+id/weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, Sept 19"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            />

        <!-- Weather Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginTop="8dp">

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/weather_stat_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_temperature" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20Â°C"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/weather_stat_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_humidity"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- Sunlight -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/weather_stat_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_sunlight"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/sunlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Task Count -->
    <TextView
        android:id="@+id/taskCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tasks: %1$d"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <!-- RecyclerView for Tasks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
