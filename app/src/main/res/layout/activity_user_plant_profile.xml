<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserPlantProfileActivity">

    <!-- Toolbar with centered text -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_plant_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@android:color/black"
        tools:ignore="MissingConstraints">

        <!-- Centered Plant Nickname in Toolbar -->
        <TextView
            android:id="@+id/userplant_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Plant Name"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView to hold the plant details and content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/journal_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/user_plant_profile_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_photo_camera_24" />

        <!-- Plant Common Name -->
        <TextView
            android:id="@+id/plant_common_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Plant Name"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <!-- Plant Scientific Name -->
        <TextView
            android:id="@+id/plant_sci_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Plant Scientific Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <!-- Description Field (Non-editable TextView) -->
        <TextView
            android:id="@+id/plant_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_border"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="5"
            android:padding="16dp"
            android:scrollbars="vertical"
            android:text="" />

        <!-- Watering and Pruning Progress Bars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Watering Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp">

                    <ProgressBar
                        android:id="@+id/circular_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="80"
                        android:progressDrawable="@drawable/circular_progress_drawable"
                        android:rotation="270" />

                    <ImageButton
                        android:id="@+id/water_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:contentDescription="@string/mark_as_watered"
                        android:src="@drawable/ic_watering" />
                </FrameLayout>

                <TextView
                    android:id="@+id/last_watered_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Last Watered"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Pruning Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp">

                    <ProgressBar
                        android:id="@+id/pruning_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/circular_progress_drawable"
                        android:rotation="270" />

                    <ImageButton
                        android:id="@+id/pruning_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:contentDescription="test"
                        android:src="@drawable/ic_prune" />
                </FrameLayout>

                <TextView
                    android:id="@+id/last_pruned_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Last Pruned"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Test Text-->
        <TextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Testing for Scroll"
            android:textSize="120sp" />
    </LinearLayout>
</ScrollView>

        <!-- Open Journal Button at the bottom -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/journal_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:text="Open Journal"
    android:textColor="@android:color/white"
    app:backgroundTint="@android:color/holo_green_dark"
    app:cornerRadius="24dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
