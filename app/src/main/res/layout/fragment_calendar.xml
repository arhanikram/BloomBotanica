<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="32dp"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.CalendarFragment">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/purple_200"
        app:mcv_weekDayTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:mcv_dateTextAppearance="@style/TextAppearance.MaterialComponents.Body1"/>


</FrameLayout>