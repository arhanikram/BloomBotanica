<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust the corner radius as needed -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationCompact" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/facultyglyphicregular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/facultyglyphicregular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CalendarMonthTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/facultyglyphicregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CalendarDayTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FAB_Style" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:elevation">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/darkgreen</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>