<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name=".base.BloomBotanicaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloomBotanica"
        tools:targetApi="31">
        <activity
            android:name=".ui.AboutPageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.VersionHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.PredictionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FullscreenImageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LogDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.JournalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.UserPlantProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AppearanceActivity"
            android:exported="false" />
        <activity android:name=".ui.SettingsFragment" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>